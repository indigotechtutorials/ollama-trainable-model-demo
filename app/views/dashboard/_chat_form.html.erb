<%= form_with url: chats_path do |f| %>
  <div class="flex flex-col gap-2"> 
    <%= f.label :prompt, class: "text-lg text-indigo-50" %>
    <%= f.text_area :prompt, class: "h-40 p-2" %>
  </div>

  <%= f.submit "Chat with model", class: "px-3 py-2 rounded-full bg-blue-500 text-blue-50 cursor-pointer mt-4 hover:scale-105" %>
<% end %>